# TapSpot 前端构建 Dockerfile
FROM node:20-alpine AS builder

WORKDIR /app

# 复制前端代码
COPY frontend/package*.json ./
RUN npm install

COPY frontend/ ./

# 构建前端
RUN npm run build

# Nginx 运行阶段
FROM nginx:alpine

# 复制自定义 nginx 配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

# 复制构建好的前端文件
COPY --from=builder /app/dist /usr/share/nginx/html

# 暴露端口
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
